<link rel='stylesheet' href='../stylesheets/styleshow.css' />
<%- include('../partials/header.ejs'); %>
<nav>
  <a href="/ordering" class="orders">
    <div id="create">Create Order</div>
  </a>
  <div class="orders" id="order">Show Orders</div>
  </a>
  <a href="/ordering/orderId" class="orders">
    <div class="orders" id="number">Show Order by<br> Order Number</div>
  </a>
  <a id="logout" href="/logout" class="orders" id="logout">
    <div class="orders">Logout</div>
  </a>
</nav>
<main>
  <section></section>
  <section>
    <% orders.forEach((o)=>{ %>
      <div class="orderlist">
        <div>Order Number: </div>
        <div><%= o.orderNumber %></div>
      </div>
      <div class="orderlist">
        <div>Employee Name: </div>
        <div><%= o.employee.name %></div>
      </div>
      <div class="orderlist">
        <div>Customer Name: </div>
        <div><%= o.customer.name %></div>
      </div>
      <div class="orderlist">
        <div>Pizza Size:</div>
        <div><%= o.size %></div>
      </div>
      <div class="orderlist">
        <div>Pizza Sauce: </div>
        <div><%= o.sauce %></div>
      </div>
      <div class="orderlist">
        <div>Amount of cheese: </div>
        <div><%= o.cheese %></div>
      </div>
      <div class="orderlist">
        <% o.toppings.forEach((a)=>{ %>
          <%= a %>
          <% }) %>
      </div>
  <% }) %>
  </section>
  <section></section>
</main>
<%- include('../partials/footer.ejs'); %>

